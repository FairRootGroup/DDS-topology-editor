{
    // Extend existing configuration from ESlint and eslint-plugin-react defaults.
    "extends": [
      "eslint:recommended", "plugin:react/recommended"
    ],
    // Enable ES6 support.
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    // Enable custom plugin known as eslint-plugin-react
    "plugins": [
      "react"
    ],
    "rules": {
      // Disable `no-console` rule
      "no-console": 0,
      // Give a warning if identifiers contain underscores
      "no-underscore-dangle": 1,
    }
}
